{
    "env": {
        "browser": true,
        "es2022": true,
        "node":true 
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "semi": ["warn", "always"],
        "quotes": ["warn", "single", { "avoidEscape": true ,"allowTemplateLiterals":true}],
        "eqeqeq": ["off", "smart"],
        "no-alert": "error"
    }
}
